appenders:
  system: 
    type: file
    maxLogSize: {{ epg_max_log_size }}
    backups: {{ epg_log_backup_num }}
    filename: "%{% block service_name %}{% endblock %}System%"
    pattern: "-yyyy-MM-dd"
  access: 
    type: file
    maxLogSize: {{ epg_max_log_size }}
    backups: {{ epg_log_backup_num }}
    filename: "%{{ self.service_name() }}Access%"
    pattern: "-yyyy-MM-dd"
  stream: 
    type: file
    maxLogSize: {{ epg_max_log_size }}
    backups: {{ epg_log_backup_num }}
    filename: "%{{ self.service_name() }}Stream%"
    pattern: "-yyyy-MM-dd"
  encode: 
    type: file
    maxLogSize: {{ epg_max_log_size }}
    backups: {{ epg_log_backup_num }}
    filename: "%{{ self.service_name() }}Encode%"
    pattern: "-yyyy-MM-dd"
  console: 
    type: console
  stdout: 
    type: stdout
{% block categories %}
{% endblock %}

