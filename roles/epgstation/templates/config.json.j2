{
    "serverPort": {{ epg_port }},
    "mirakurunPath": "http://{{ epg_mirakurun_host }}:{{ epg_mirakurun_port }}/",
    "mysql": {
        "host": "{{ epg_mysql_host }}",
        "user": "{{ epg_mysql_user }}",
        "port": "{{ epg_mysql_port }}",
        "database": "{{ epg_mysql_database }}",
        "password": "{{ epg_mysql_password }}",
        "connectTimeout": 1000,
        "connectionLimit": 10
    },
    "convertDBStr": "{{ epg_convert_db_str }}",
    "recordedFormat": "{{ epg_recorded_format }}",
    "storageLimitAction": "{{ epg_storage_limit_action }}",
    "storageLimitThreshold": "{{ epg_storage_limit_threshold }}",
    {% if epg_behind_proxy %}
    "subDirectory": "{{ epg_published_directory }}",
    {% endif %}
    "excludeServices": [],
    "maxEncode": 2,
    "encode": [
        {
            "name": "H264",
            "cmd": "%ROOT%/config/enc.sh",
            "suffix": ".mp4",
            "default": true
        },
        {
            "name": "H264 (VAAPI)",
            "cmd": "%ROOT%/config/enc_vaapi.sh",
            "suffix": ".mp4",
            "default": false
        }
    ],
    "delts": false,
    "recordedViewer": {
        "ios": "infuse://x-callback-url/play?url=http://ADDRESS",
        "android": "intent://ADDRESS#Intent;package=com.mxtech.videoplayer.ad;type=video;scheme=http;end"
    },
    "recordedDownloader": {
        "ios": "vlc-x-callback://x-callback-url/download?url=http://ADDRESS&filename=FILENAME",
        "android": "intent://ADDRESS#Intent;package=com.dv.adm;type=video;scheme=http;end"
    },

    "maxStreaming": 4,
    "mpegTsViewer": {
        "ios": "vlc-x-callback://x-callback-url/stream?url=http://ADDRESS",
        "android": "intent://ADDRESS#Intent;package=com.mxtech.videoplayer.ad;type=video;scheme=http;end"
    },
    "mpegTsStreaming": [
        {
            "name": "1280x720(VAAPI)",
            "cmd": "%FFMPEG% -re -dual_mono_mode main -vaapi_device {{ epg_vaapi_device }} -i pipe:0 -vf format=nv12|vaapi,hwupload,deinterlace_vaapi,scale_vaapi=w=1280:h=720 -c:a aac -ar 48000 -ab 192k -ac 2 -c:v h264_vaapi -level 40 -aspect 16:9 -q 21 -f mpegts pipe:1"
        },
        {
            "name": "1280x720",
            "cmd": "%FFMPEG% -re -dual_mono_mode main -i pipe:0 -sn -c:a aac -ar 48000 -ab 192k -ac 2 -c:v libx264 -s 1280x720 -vf yadif -preset veryfast -aspect 16:9 -vb 3000k -f mpegts pipe:1"
        },
        {
            "name": "無変換"
        }
    ],
    "recordedHLS": [
        {
            "name": "1280x720 (VAAPI)",
            "cmd": "%FFMPEG% -dual_mono_mode main -i %INPUT% -map 0 -ignore_unknown -max_muxing_queue_size 1024 -sn -f hls -hls_time 3 -hls_list_size 0 -hls_allow_cache 1 -hls_segment_filename %streamFileDir%/stream%streamNum%-%09d.ts -threads auto -c:a aac -ar 48000 -ab 192k -ac 2 -c:v h264_vaapi -vaapi_device {{ epg_vaapi_device }} -hwaccel vaapi -vf format=nv12|vaapi,hwupload,deinterlace_vaapi,scale_vaapi=w=1280:h=720 -s 1280x720 -preset veryfast -aspect 16:9 -vb 3000k -flags +loop-global_header %OUTPUT%"
        },
        {
            "name": "1280x720",
            "cmd": "%FFMPEG% -dual_mono_mode main -i %INPUT% -map 0 -ignore_unknown -max_muxing_queue_size 1024 -sn -f hls -hls_time 3 -hls_list_size 0 -hls_allow_cache 1 -hls_segment_filename %streamFileDir%/stream%streamNum%-%09d.ts -threads auto -c:a aac -ar 48000 -ab 192k -ac 2 -c:v libx264 -s 1280x720 -preset veryfast -aspect 16:9 -vb 3000k -flags +loop-global_header %OUTPUT%"
        },
        {
            "name": "720x480(h265)",
            "cmd": "%FFMPEG% -dual_mono_mode main -i %INPUT% -map 0 -ignore_unknown -max_muxing_queue_size 1024 -sn -f hls -hls_time 3 -hls_list_size 0 -hls_allow_cache 1 -hls_segment_type fmp4 -hls_fmp4_init_filename stream%streamNum%-init.mp4 -hls_segment_filename stream%streamNum%-%09d.m4s -c:a aac -ar 48000 -ab 128k -ac 2 -c:v libx265 -s 720x480 -preset veryfast -aspect 16:9 -vb 350k -tag:v hvc1 %OUTPUT%"
        }
    ],
    "liveHLS": [
        {
            "name": "1280x720 (VAAPI)",
            "cmd": "%FFMPEG% -re -dual_mono_mode main -init_hw_device vaapi=va:{{ epg_vaapi_device }} -hwaccel vaapi -hwaccel_device va -hwaccel_output_format vaapi -filter_hw_device va -i pipe:0 -map 0 -ignore_unknown -max_muxing_queue_size 1024 -sn -f hls -hls_time 3 -hls_list_size 17 -hls_allow_cache 1 -hls_segment_filename %streamFileDir%/stream%streamNum%-%09d.ts -threads 0 -c:a aac -ar 48000 -ab 128k -ac 2 -c:v h264_vaapi -vf format=nv12|vaapi,hwupload,deinterlace_vaapi,scale_vaapi=w=1280:h=720  -profile:v 77 -level 31 -qp 25 -quality 0 -flags +loop-global_header %OUTPUT%"
        },
        {
            "name": "1280x720",
            "cmd": "%FFMPEG% -re -dual_mono_mode main -i pipe:0 -map 0 -ignore_unknown -max_muxing_queue_size 1024 -sn -f hls -hls_time 3 -hls_list_size 17 -hls_allow_cache 1 -hls_segment_filename %streamFileDir%/stream%streamNum%-%09d.ts -threads 0 -c:a aac -ar 48000 -ab 192k -ac 2 -c:v libx264 -s 1280x720 -preset veryfast -aspect 16:9 -vb 3000k -flags +loop-global_header %OUTPUT%"
        }
    ],
    "liveWebM": [
        {
            "name": "1280x720",
            "cmd": "%FFMPEG% -re -dual_mono_mode main -i pipe:0 -sn -c:a libvorbis -b:a 192k -c:v vp8 -s 1280x720 -b:v 3000k -deadline realtime -speed 4 -cpu-used -8 -filter:v yadif -f webm pipe:1"
        }
    ],
    "liveMP4": [
        {
            "name": "1280x720",
            "cmd": "%FFMPEG% -dual_mono_mode main -re -i pipe:0 -sn -threads 0 -c:a aac -ar 48000 -ac 2 -ab 192k -c:v h264 -s 1280x720 -vb 3000k -filter:v yadif -profile:v baseline -preset veryfast -tune fastdecode,zerolatency -movflags frag_keyframe+empty_moov+faststart+default_base_moof -y -f mp4 pipe:1"
        },
        {
            "name": "1280x720 (VAAPI)",
            "cmd": "%FFMPEG% -re -dual_mono_mode main -hwaccel vaapi -hwaccel_device {{ epg_vaapi_device }} -hwaccel_output_format vaapi -i pipe:0 -analyzeduration 30M -probesize 30M -c:a aac -ar 48000 -ac 2 -ab 192k -c:v h264_vaapi -vf deinterlace_vaapi,scale_vaapi=w=1280:h=-2 -s 1280x720 -profile:v 77 -level 31 -qp 28 -quality 1 -movflags frag_keyframe+empty_moov+faststart+default_base_moof -f mp4 pipe:1"
        }
    ],
    "recordedStreaming": {
        "webm": [
            {
                "name": "1280x720",
                "cmd": "%FFMPEG% -dual_mono_mode main %RE% -i pipe:0 -sn -threads 0 -c:a libvorbis -ar 48000 -ac 2 -c:v vp8 -s 1280x720 %VB% %VBUFFER% %AB% %ABUFFER% -deadline realtime -speed 4 -cpu-used -8 -filter:v yadif -y -f webm pipe:1",
                "vb": "3000k",
                "ab": "192k"
            }
        ],
        "mp4": [
            {
                "name": "1280x720",
                "cmd": "%FFMPEG% -dual_mono_mode main %RE% -i pipe:0 -sn -threads 0 -c:v h264 -c:a aac -ar 48000 -ac 2 -s 1280x720 %VB% %VBUFFER% %AB% %ABUFFER% -filter:v yadif -profile:v baseline -preset veryfast -tune fastdecode,zerolatency -movflags frag_keyframe+empty_moov+faststart+default_base_moof -y -f mp4 pipe:1",
                "vb": "3000k",
                "ab": "192k"
            }
        ],
        "mpegTs": [
            {
                "name": "1280x720 (H.264)",
                "cmd": "%FFMPEG% -dual_mono_mode main %RE% -i pipe:0 -sn -threads 0 -filter:v yadif -c:v h264 -c:a aac -ar 48000 -ac 2 -s 1280x720 %VB% %VBUFFER% %AB% %ABUFFER% -profile:v baseline -preset veryfast -tune fastdecode,zerolatency -y -f mpegts pipe:1",
                "vb": "3000k",
                "ab": "192k"
            }
        ]
    }
}

